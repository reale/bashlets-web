source bashlets web::api::defs
source bashlets text::filter::encode


#@public
function bashlets::web::api::yahoo::search_url()
{
    ########################################################################
    #
    # Code inspired by:
    #
    # https://www.if-not-true-then-false.com/2009/google-search-from-linux-and-unix-command-line/
    #
    ########################################################################

    # local lang="en"  # TODO support language as an option!
    local url="$(eval echo "$BASHLETS_WEB_API_YAHOO_ENDPOINT")" query

    [[ $# -gt 0 ]] || return

    query="$($BASHLETS_NAMESPACE encode urlencode "$@")"

    echo "${url}${query}"
}


